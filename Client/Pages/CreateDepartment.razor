@page "/createdepartment"
@inject IDepartmentVeiwModel DepartmentVeiwModel

<div class="mb-2">
    <Breadcrumb>
        <BreadcrumbItem Href="/">Home</BreadcrumbItem>
        <BreadcrumbItem Href="/departments">Departments</BreadcrumbItem>
        <BreadcrumbItem>New</BreadcrumbItem>
    </Breadcrumb>
</div>
<hr />

<Card Hoverable Title="New Department">

    <Form Model="@Department"
          OnFinish="HamdleValidSubmit"
          Layout="vertical">
        <ValidationSummary />
        <FormItem Label="Department Name">
            <Input @bind-Value="@context.DepartmentName" />
        </FormItem>
        <FormItem>
            <Button Type="@ButtonType.Primary" HtmlType="submit">
                Create
            </Button>
        </FormItem>
    </Form>

</Card>


@code{
    [CascadingParameter]
    public Error Error { get; set; }

    public Department Department { get; set; } = new Department();
    protected async Task HamdleValidSubmit()
    {
        try
        {
            var result = await DepartmentVeiwModel.CreateDepartment(Department);
            if (result != null)
            {
                DepartmentVeiwModel.HandleSuccessCreate();
            }
        }
        catch (Exception ex)
        {

            Error.ProcessError(ex);
        }

    }

}


